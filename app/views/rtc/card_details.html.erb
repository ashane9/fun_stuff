<div>
  <%= form_with model: @card do |form| %>
    <div class="col-md-1 no-padding shrink-col">
      <%= image_tag "widget.PNG", class: 'img-responsive' %>
    </div>
    <div class="col-md-11 no-padding full-width">
      <br>
      <div class="panel panel-default square-border no-bottom-margin rtc-panel">
        <div class="row text-left">
          <div class="col-md-9">
            <%= image_tag "tech_card_icon.PNG", class: 'img-responsive', style: 'float: left'%>
            <p class="no-horizontal-padding">
              <%= @card.card_type%>
              <%= form.label @card.number %>
            </p>
          </div>
          <div class="col-md-3 text-right">
            <%= image_tag "icons.PNG", class: 'img-responsive', style: 'float: left' %>
            <%= form.submit 'Save' %>
          </div>
        </div>
        <div class="row text-left">
          <div id='summary' class="col-md-1">
            Summary: <span style="color: red">*</span>
          </div>
          <div id='summary-text' class="col-md-10">
            <%= form.text_field :summary, placeholder: @card.summary, class: 'full-width' %>
          </div>
          <div class="col-md-1">
            <%= form.select :status, options_for_select(['New', 'Begin Analysis', 'Start Working', 'Set Done'], selected: @card.status) %>
          </div>
        </div>
      </div>
      <div class="panel panel-default square-border no-top-margin no-top-border">
        <%= image_tag "tabs.PNG", class: 'img-responsive' %>
      </div>
      <div class="col-md-10">
        <div class="panel panel-default square-border rtc-panel">
          <div class="text-left"><b>Details</b></div>
          <div class="row text-left">
            <div class="col-md-2">
              Type:
            </div>
            <div class="col-md-4">
              <%= form.select :card_type, options_for_select(['Story Card', 'Technical Card'], selected: @card.status) %>
            </div>
            <div class="col-md-2">
              Created By:
            </div>
            <div class="col-md-4">
              <span style="color: lightskyblue">Macklin, Brent A</span>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Filed Against: <span style="color: red">*</span>
            </div>
            <div class="col-md-4">
              <%= form.select :team_name, options_for_select(['Shenanigans'], selected: 'Shenanigans') %>
            </div>
            <div class="col-md-2">
              Tags:
            </div>
            <div class="col-md-4">
              <input type="text">
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Nationwide Project:
            </div>
            <div class="col-md-4">
              <%= form.select :project_name, options_for_select(['DVA'], selected: 'DVA') %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Application:
            </div>
            <div class="col-md-4">
              <%= form.select :application, options_for_select(['Unassigned'], selected: 'Unassigned') %>
            </div>
            <div class="col-md-2">
              Owned By:
            </div>
            <div class="col-md-4">
              <%= form.select :team_name, options_for_select(['Shane, Andrew'], selected: @card.owner) %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Size Estimate:
            </div>
            <div class="col-md-4">
              <%= form.select :application, options_for_select(['Unassigned'], selected: 'Unassigned') %>
            </div>
            <div class="col-md-2">
              Priority:
            </div>
            <div class="col-md-4">
              <select></select>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Story Points:
            </div>
            <div class="col-md-4">
              <%= form.select :points, options_for_select([0, 1, 3, 5, 8, 13, 21, 34, 55, 89, 144], selected: @card.points) %>
            </div>
            <div class="col-md-2">
              Blocked:
            </div>
            <div class="col-md-4">
              <%= form.check_box(:blocked, {}, true) %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Business Value Points:
            </div>
            <div class="col-md-4">
              <%= form.select :business_points, options_for_select([0, 1, 3, 5, 8, 13, 21, 34, 55, 89, 144], selected: @card.points) %>
            </div>
            <div class="col-md-2">
              Ready for Development:
            </div>
            <div class="col-md-4">
              <input type="checkbox">
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Solution Type:
            </div>
            <div class="col-md-4">
              <%= form.select :solution_type, options_for_select(['Unassigned'], selected: 'Unassigned') %>
            </div>
            <div class="col-md-2">
              Planned For:
            </div>
            <div class="col-md-4">
              <%= form.select :iteration, options_for_select(['Not Today'], selected: @card.iteration) %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Progress:
            </div>
            <div class="col-md-4">
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="100" style="width:0%">
                </div>
              </div>
            </div>
            <div class="col-md-2">
              Target Release:
            </div>
            <div class="col-md-4">
              <%= form.select :release, options_for_select(['08/10/2018'], selected: '08/10/2018') %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Project Area:
            </div>
            <div class="col-md-4">
              Dev Center
            </div>
            <div class="col-md-2">
              Nationwide Ranking
            </div>
            <div class="col-md-4">
              <%= form.select :ranking, options_for_select(['Unassigned'], selected: 'Unassigned') %>
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Team Area:
            </div>
            <div class="col-md-4">
              Shenanigans
            </div>
          </div>
          <div class="row text-left">
            <div class="col-md-2">
              Create Date:
            </div>
            <div class="col-md-4">
              <%= @card.created_at.strftime('%b %d, %Y, %l:%M:%S %p') %>
            </div>
          </div>
        </div>
        <div class="panel panel-default square-border rtc-panel">
          <div class="text-left" style="padding-bottom: .4%;"><b>Description</b></div>
          <textarea class="input-full"></textarea>
          <hr style="border-color: steelblue; opacity: .3;" class="no-top-margin no-bottom-margin">
          <div class="text-left" style="color: steelblue"><b>Business Value</b></div>
          <br><br><br>
          <hr style="border-color: steelblue; opacity: .3;" class="no-bottom-margin">
          <div class="text-left" style="color: steelblue"><b>Pre-Condition(s)</b></div>
          <br><br><br>
          <hr style="border-color: steelblue; opacity: .3;" class="no-bottom-margin">
          <div class="text-left" style="color: steelblue"><b>Narrative</b></div>
          <br><br><br>
        </div>
      </div>
      <div class="col-md-2">
        <div class="panel panel-default square-border rtc-panel">
          <div class="text-left"><b>Parent:</b></div>  
        </div>
      </div>
    </div>

  <% end %>
</div>
